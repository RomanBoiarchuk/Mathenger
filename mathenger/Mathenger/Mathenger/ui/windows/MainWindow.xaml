<Window x:Class="Mathenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mathenger"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Name="mainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <Label Content="{Binding Account.FirstName}" />
            <Label Content="{Binding Account.LastName}" />
        </StackPanel>
        <local:SideMenuComponent Grid.Row="1" Grid.Column="0" />
        <local:ChatListComponent x:Name="ChatList"
            SelectedChat="{Binding SelectedChat, ElementName=mainWindow, Mode=TwoWay}"
            Chats="{Binding Chats, ElementName=mainWindow}" Grid.Row="1" Grid.Column="1" />
        <local:ChatComponent x:Name="chatComponent" Grid.RowSpan="2" Grid.Row="0" Grid.Column="2" 
                                 Chat="{Binding SelectedChat, ElementName=mainWindow}"/>
    </Grid>
</Window>