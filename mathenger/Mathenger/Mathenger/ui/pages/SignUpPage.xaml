<Page x:Class="Mathenger.ui.pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="SignUpPage" Height="400" Width="340">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <DockPanel Margin="0 10" Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="1">
            <Label Padding="0" DockPanel.Dock="Left">First Name</Label>
            <TextBox DockPanel.Dock="Right" Width="145" HorizontalAlignment="Right"
                     Text="{Binding Account.FirstName}" />
        </DockPanel>
        <DockPanel Margin="0 10" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="1">
            <Label Padding="0" DockPanel.Dock="Left">Last Name</Label>
            <TextBox DockPanel.Dock="Right" Width="145" HorizontalAlignment="Right"
                     Text="{Binding Account.LastName}" />
        </DockPanel>
        <DockPanel Margin="0 10" Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="1">
            <Label Padding="0" DockPanel.Dock="Left">Email</Label>
            <TextBox DockPanel.Dock="Right" Width="145" HorizontalAlignment="Right"
                     Text="{Binding User.Email}" />
        </DockPanel>
        <DockPanel Margin="0 10" Grid.Row="4" Grid.ColumnSpan="2" Grid.Column="1">
            <Label Padding="0" DockPanel.Dock="Left">Password</Label>
            <PasswordBox DockPanel.Dock="Right" Width="145" HorizontalAlignment="Right"
                         PasswordChanged="PasswordBox_OnPasswordChanged" />
        </DockPanel>
        <DockPanel Margin="0 10" Grid.Row="5" Grid.ColumnSpan="2" Grid.Column="1">
            <Label Padding="0" DockPanel.Dock="Left">Repeat Password</Label>
            <PasswordBox DockPanel.Dock="Right" Width="145" HorizontalAlignment="Right"/>
        </DockPanel>
        <Button Margin="0 10" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                Name="SignUpButton" Padding="10" Click="SignUpButton_OnClick" Content="Sign Up" />
        <TextBlock Grid.Row="7" Grid.Column="1" FontSize="14" Margin="0 10" Grid.ColumnSpan="2">
            <Hyperlink Click="Hyperlink_OnClick">Sign In</Hyperlink>
        </TextBlock>
    </Grid>
</Page>
